/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"outDir": "./dist/out-tsc",
		"types": [
			"node",
			"lodash"
		]
	},
	"files": [
		"src/main.ts",
		"src/polyfills.ts"
	],
	"include": [
		"src/**/*.ts",
		"src/**/*.json"
	],
	"exclude": [
		"**/*.test.ts",
		"**/*.spec.ts"
	]
}
